# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# If not running interactively, don't do anything
if [[ -n "$PS1" ]]; then
    export BASH_HOME=~/.bash
    export EDITOR='vim'
    export IMAGE_VIEWER='gthumb'
    export BASH_THEME='equator'
    export TERM="xterm-256color"
    export PATH=$PATH:$HOME/.bin:$HOME/bin:$HOME/.rbenv/bin
    export IPYTHONDIR=$HOME/.ipython
    export WORKON_HOME=$HOME/.virtualenv

    source $BASH_HOME/init.sh

    [[ -s $HOME/.nvm/nvm.sh ]] && source ~/.nvm/nvm.sh
    [[ -s $HOME/.phpbrew/bashrc ]] && source ~/.phpbrew/bashrc
    [[ ! -z `which virtualenvwrapper.sh` ]] && source `which virtualenvwrapper.sh`
    eval "$(rbenv init -)"
fi
